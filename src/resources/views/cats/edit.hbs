<div class="mt-4">
  <h3>
    Cập nhật
  </h3>
  <form method="POST" action="/cats/{{cat._id}}?_method=PUT">
    <div class="mb-3">
      <label for="name" class="form-label">Tên loại mèo</label>
      <input
        type="text"
        class="form-control"
        value="{{cat.name}}"
        id="name"
        name="name"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Mô tả</label>
      <input
        type="text"
        class="form-control"
        value="{{cat.description}}"
        id="description"
        name="description"
      />
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Hình ảnh</label>
      <input
        type="text"
        class="form-control"
        value="{{cat.image}}"
        id="image"
        name="image"
      />
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại </button>
  </form>
</div>